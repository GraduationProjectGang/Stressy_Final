<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WeeklyTimeGraphFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/hourlyStressGraph"
            android:layout_width="match_parent"
            android:layout_height="280dp"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_weekly_time_left"
                style="@style/graphButton"
                android:text="이전"
                android:layout_height="40dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/button_radius_gray_left"
                />
            <Button
                android:id="@+id/button_weekly_time_right"
                style="@style/graphButton"
                android:layout_height="40dp"
                android:text="다음"
                android:layout_marginStart="30dp"
                android:background="@drawable/button_radius_gray_right"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>