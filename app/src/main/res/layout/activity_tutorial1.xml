<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/tutorial1"
    tools:context=".activity.Tutorial1Activity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="9"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="10dp"
        android:src="@drawable/text_logo"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:paddingRight="3dp"
        android:layout_marginRight="5dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            style="@style/TextStyle"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="9sp"
            android:text="프로젝트 주제" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:lineSpacingExtra="5sp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="개인 프라이버시를 보호하는\n협업 학습을 활용한\n스마트폰 사용 패턴 분석 및\n스트레스 예측" />


        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="25dp"
            android:background="@color/colorPrimaryDark" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingHorizontal="10dp"
        android:lineSpacingExtra="8sp"
        android:scrollbars="vertical"
        android:scrollbarSize="5dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:text="안녕하세요,\n\n저희는 건국대학교 컴퓨터공학부 졸업프로젝트 팀인 천세진, 김지효, 조원빈입니다.\n\n이 프로젝트는 사용자의 스마트폰 사용 패턴과 스트레스 수준 설문조사를 통해 인공지능 모델을 구축하고, 스트레스 수준을 예측하고자 합니다."
        android:textColor="#000000"
        android:textSize="19dp"
 />

</LinearLayout>


    <Button
        android:id="@+id/nextButton1"
        style="@style/nextButton"
        android:layout_gravity="center"
        android:text="다음"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

</LinearLayout>