<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:foregroundGravity="center"
    android:background="@android:color/transparent"
    tools:context=".activity.CheckPwDialog">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="19dp"
            style="@style/questions"
            android:layout_marginTop="10dp"
            android:text="@string/check_original_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimaryDark"
            />

        <EditText
            style="@style/EditText"
            android:background="@android:color/transparent"
            android:id="@+id/editText_check_pw"
            android:ems="10"
            android:hint="@string/hint_password"
            android:inputType="textPassword" />

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/colorPrimary" />

        <TextView
            style="@style/questions"
            android:id="@+id/guide_password"
            android:layout_marginTop="10dp"
            android:text="@string/guide_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="17sp"
            android:textColor="#EF5388"
            android:visibility="gone"
            />

    </LinearLayout>


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/button_check_pw"
        style="@style/nextButton"
        android:layout_gravity="bottom"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:textStyle="bold" />
</FrameLayout>